{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"moduleResolution": "Node",
		"strict": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"types": ["node", "hardhat"],
		"skipLibCheck": true
	},
	"include": [
		"hardhat.config.ts",
		"scripts/**/*.ts",
		"test/**/*.ts",
		"ai/**/*.ts"
	]
}

